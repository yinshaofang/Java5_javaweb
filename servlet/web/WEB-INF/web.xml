<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
     <!--转发与重定向-->
     <servlet>
         <servlet-name>s1</servlet-name>
         <servlet-class>day2.转发与重定向.Servlet1</servlet-class>
     </servlet>
     <servlet-mapping>
         <servlet-name>s1</servlet-name>
         <url-pattern>/day2/s1</url-pattern>
     </servlet-mapping>

    <servlet>
        <servlet-name>s2</servlet-name>
        <servlet-class>day2.转发与重定向.Servlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>s2</servlet-name>
        <url-pattern>/day2/s2</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>request</servlet-name>
        <servlet-class>day2.转发与重定向.request对象.ReqServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>request</servlet-name>
        <url-pattern>/day2/request</url-pattern>
    </servlet-mapping>


</web-app>